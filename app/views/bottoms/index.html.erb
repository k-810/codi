<div class="contents row" >
  <div class="wrapper">
    <% @bottoms.each do |bottom| %>
      <div class="content_post" style="background-image: url(<%= bottom.image %>);">
      <% if user_signed_in? && bottom.user_id == current_user.id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '削除', "/bottoms/#{bottom.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
    <% end %>
  </div>
</div>